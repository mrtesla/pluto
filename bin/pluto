#!/usr/bin/env node
// vim: set ft=js

var Fs   = require('fs')
,   Path = require('path')
;

var path
;

path = Fs.realpathSync(process.argv[1]);

while (true) {
  if (Path.existsSync(Path.join(path, 'services'))) { break; }
  if (path == '/') { path = null; break; }
  path = Path.resolve(path, '..');
}

if (path) {
  process.env['ORIGINAL_PWD'] = process.cwd();
  process.chdir(path);
}

require(__dirname+'/../src/cli').run();
